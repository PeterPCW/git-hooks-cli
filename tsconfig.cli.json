{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./bin",
    "declaration": false,
    "rootDir": "./src"
  },
  "include": ["src/cli.ts"],
  "exclude": ["node_modules"]
}
